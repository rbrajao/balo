<%= form_with(model: championship) do |form| %>
  <% if championship.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(championship.errors.count, "error") %> prohibited this championship from being saved:</h2>

      <ul>
        <% championship.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 

  <main id="main" class="main">
    <!-- start Page Title -->
    <div class="pagetitle">
      <h1>Detalhes do campeonato</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
          <li class="breadcrumb-item active">Campeonatos</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card" id="championships">
            <div class="card-body" >
              <h5 class="card-title">Dados do campeonato</h5>

                  <!-- Horizontal Form -->
              <form>
                <div class="row mb-3">
                  <%= form.label 'Campeonato', class: "col-sm-2 col-form-label" %>
                  <div class="col-sm-10">
                    <%= form.text_field :name, autofocus: true, class: "form-control" %>
                  </div>
                </div>
                <div class="row mb-3">
                  <%= form.label 'Descrição', class: "col-sm-2 col-form-label" %>
                  <div class="col-sm-10">
                    <%= form.text_field :description, autofocus: true, class: "form-control" %>
                  </div>
                </div>
             
                 <div class="row mb-3">
                 <%= form.label 'Ativo?', class: "col-sm-2 col-form-label" %>
                  <div class="col-sm-10">
                      <%= form.check_box :status, class: "form-check" %>
                    </div>
                  </div>
                </div>
               
                <div class="text-center">
                  <%= form.submit "Alterar",class: "btn btn-primary"%>
                </div>
                <br>
              </form><!-- End Horizontal Form -->
            </div>
          </div>
        </div>
      </div>
    </section>
    <%= link_to "Voltar", championships_path %>

    <%= button_to "Destroy this team", @championship, method: :delete %>
  </main><!-- End #main -->

<% end %>
