
<main id="main" class="main">
    <!-- start Page Title -->
    <div class="pagetitle">
      <h1>Cadastro das rodadas <span style="color: green"><%= notice %></span></h1>
      
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
          <li class="breadcrumb-item active">Rodadas</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card" id="rounds">
            <div class="card-body" >
              <h5 class="card-title">Lista das rodadas - <%= link_to "Nova rodada", new_round_path %></h5>
             
           
             
              <%= form_tag rounds_path, method: :get do %>
                <div>Campeonato:
                <%= select_tag :championship_id, options_from_collection_for_select(@championships, "id", "name", selected: params[:championship_id]), prompt: "Selecione um campeonato", onchange: "this.form.submit();" %>
                </div>
              
              <br>
              <br>
              
                <% if @championships.any? %>
             
                  <!-- Default Table -->
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Campeonato</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Data limite</th>
                        <th scope="col">Descrição</th>                    
                        <th scope="col">Status</th>
                        <th scope="col">Data criação</th>
                        <th scope="col">Data atualização</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Excluir</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @rounds.each do |round| %>
                        <%= render round %>
                      <% end %>
                    </tbody>
                  </table>
                  <!-- End Default Table Example -->
        
                <% else %>
              
                  <div class="no-championships">
                    <p>There are no championships available at the moment.</p>
                  </div>
              
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main><!-- End #main -->
  
