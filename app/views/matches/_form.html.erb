<%= form_with(model: match) do |form| %>
  <% if match.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<main id="main" class="main">
    <!-- start Page Title -->
    <div class="pagetitle">
      <h1>Cadastro dos jogos da rodada</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
          <li class="breadcrumb-item active">Rodadas</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card" id="matches">
            <div class="card-body" >
              <h5 class="card-title">Jogos</h5>

                  <!-- Horizontal Form -->
                 <%= form_tag matches_path, method: :get do %>
                  <div>Campeonato:
                    <%= select_tag :championship_id, options_from_collection_for_select(@championships, "id", "name", selected: params[:championship_id]), prompt: "Selecione um campeonato", onchange: "updateRounds();" %>
                  </div>

                  <div>Rodada:
                    <%= select_tag :round_id, options_from_collection_for_select(@rounds, "id", "name", selected: params[:round_id]), prompt: "Selecione uma rodada" %>
                  </div>

                <% end %>

                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">Time Mandante</th>
                      <th scope="col">Score</th>
                      <th scope="col">Time Visitante</th>
                      <th scope="col">Score</th>
                      <th scope="col">Data do Jogo</th>
                      <th scope="col">Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>
                         <div class="row mb-3">
                          <div class="col-sm-10">
                            
                            <%= form.collection_select(:teamhome_id, @teams, :id, :name) %>
                          </div>
                        </div>
                      </td>
                       <td>
                         <div class="row mb-3">
                          <div class="col-sm-10">
                             <%= form.number_field :score_home, class: "form-control"  %>                              
                          </div>
                        </div>
                      </td>
                       <td>
                         <div class="row mb-3">
                          <div class="col-sm-10">
                            <%= form.collection_select(:teamvisit_id, @teams, :id, :name) %>
                          </div>
                        </div>
                      </td>
                       <td>
                         <div class="row mb-3">
                          <div class="col-sm-10">
                             <%= form.number_field :score_visit, class: "form-control"  %>                              
                          </div>
                        </div>
                      </td>
                      <td>
                         <div class="row mb-3">
                          <div class="col-sm-10">
                            <%= form.datetime_field :match_date, class: "form-control"  %>
                          </div>
                        </div>
                      </td>
                      <td>
                         <div class="row mb-3">
                          <div class="col-sm-10">
                             <%= form.check_box :status, class: "form-check" %>
                          </div>
                        </div>
                      </td>
                  <tbody>
                </table>

          

                <div class="text-center">
                  <%= form.submit "Alterar",class: "btn btn-primary"%>
                </div>
                <br>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%= link_to "Voltar", matches_path %>

    <%= button_to "Remover", @match, method: :delete %>
  </main><!-- End #main -->

<% end %>
